<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src='main.js'></script>
    <title>Macskák</title>
    <style>
       a:link {
        color: rgb(0, 0, 0);
      }
      body{
        background-color: bisque;
        padding: 10px;
      }
    </style>
</head>
<body>
  <H1>Macskák</H1>


  <form method="POST" name="Validacio" onsubmit="return validateForm()">
    <p>
        Súly: <input type="number" name="suly">
    </p>
    <p>
        Szem Szín: <input type="text" name="szem_szin">
    </p>
    <p>
        <input type="submit" value="Új Macska">
    </p>
</form>


<div>
  <a href="/">Vissza a főoldalra</a>
</div>

<script>
  function validateForm() {
  let x = document.forms["Validacio"]["suly"].value;
  let y = document.forms["Validacio"]["szem_szin"].value;
  if (x == "") {
    alert("Kérlek add meg a súlyát!");
    return false;
  }
  else if (x == "0"){
    alert("A súlya nem lehet nulla!");
    return false;
  }
  else if (y == ""){
    alert("Kérlek add meg a szemszínt!");
    return false;
  }
}
</script>

</body>
</html>
